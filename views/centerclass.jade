extends layout

block content
		div.main.auto
			link(rel="stylesheet", href="/stylesheets/class.css")
			div.lunbo
				ul.lunbobox
					li.fl
						a(href='/').block
							img(src="/images/lun1.jpg")
					li.fl
						a(href='/').block
							img(src="/images/lun2.jpg")
					li.fl
						a(href='/').block
							img(src="/images/lun3.jpg")
				ul.circlebox
					li.circlebtn
					li.circlebtn
					li.circlebtn
				div.btnleft.turnbtn
				div.btnright.turnbtn
			div.ke
			div.liveclass
				div.liveclass_left.fl
					ul
						li
							a(href="/centerclass").block.on 我的课程
						li
							a(href="/centerorder").block 我的订单
						li
							a(href="/centerpurse").block 我的钱包
						li
							a(href="/centeraccount").block 账户设置
				div.liveclass_right.fr
					div.liveclass_right_title
						a(href="javascript:void(0);").fl.block
							span.block.on 全部
						a(href="javascript:void(0);").fl.block
							span.block 直播课程
						a(href="javascript:void(0);").fl.block
							span.block 点播课程
					div.livecourse_right_cont
						if(data.length!=0)
							-each course in data
								div.livecourse_right_box
									a(href="/").block
										img(src="#{course.pic}", alt="").fl
										div.info.fl
											div.title #{course.classname}
											p
												span 蓝鸥科技
												span 总课时:18
											em  #{course.des}
										div.price.fr
											em #{course.oldprice}
											i #{course.price}
						else
							img(src="http://www.jingyingba.com/Public/home/images/165200.png", alt="").livecoursenull

		script(src='/javascripts/list.js')
